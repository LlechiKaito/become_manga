<h2 class = "form-title">アカウントログイン</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class = "registration-form">
    <div class="field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "field-form" %>
    </div>

    <div class="field">
      <%= f.password_field :password, autocomplete: "current-password", class: "field-form" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field-check">
        <%= f.check_box :remember_me %>
        <%= f.label :次回から自動的にログイン %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "ログイン" %>
    </div>
  </div>
<% end %>
