<h2 class = "form-title">アカウント登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class = "registration-form">
    <div class="field">
      <%= f.text_field :nickname, autofocus: true, placeholder: "ニックネーム", class: "field-form" %>
    </div>

    <div class="field">
      <%= f.email_field :email, autofocus: true, placeholder: "e-mail", autocomplete: "email", class: "field-form" %>
    </div>

    <div class="field">
      <%# <% if @minimum_password_length %>
      <%# <em>(<%= @minimum_password_length  characters minimum)</em> %>
      <%# <% end <br /> %>
      <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワード(6字以上)", class: "field-form" %>
    </div>

    <div class="field">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "パスワード確認", class: "field-form" %>
    </div>

    <div class="field">
      <%= f.text_area :profile, autocomplete: "new-password", placeholder: "プロフィール", class: "field-area" %>
    </div>

    <div class="actions">
      <%= f.submit "新規登録" %>
    </div>
  </div>
<% end %>
